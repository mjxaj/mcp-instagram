{
  "version": "1.0",
  "name": "instagram_mcp_server",
  "description": "MCP server providing Instagram founder search.",
  "tools": [
    {
      "name": "instagram_search_founders",
      "description": "Search Instagram profiles and return founder data.",
      "input_schema": {
        "type": "object",
        "properties": {
          "query": { "type": "string" },
          "limit": { "type": "integer", "default": 20 }
        },
        "required": ["query"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "results": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "username": { "type": "string" },
                "full_name": { "type": "string" },
                "instagram_url": { "type": "string" },
                "followers": { "type": "integer" },
                "bio": { "type": "string" }
              },
              "required": [
                "username",
                "full_name",
                "instagram_url",
                "followers",
                "bio"
              ]
            }
          }
        }
      }
    }
  ]
}